---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { formatDate } from '../../utils/formatDate';

export async function getStaticPaths() {
  const papers = (await getCollection('papers')).filter((entry) => !entry.data.draft);
  return papers.map((paper) => ({
    params: { slug: paper.slug },
    props: { paper }
  }));
}

const { paper } = Astro.props;
const { Content } = await paper.render();
---

<BaseLayout title={`${paper.data.title} â€“ Research`} description={paper.data.summary}>
  <article class="surface surface--glow prose" style="font-size:1.05rem;">
    <div class="eyebrow">Research</div>
    <h1>{paper.data.title}</h1>
    <time dateTime={paper.data.publishedAt.toISOString()} style={{ color: 'var(--fg-muted)', fontSize: '0.9rem' }}>
      {formatDate(paper.data.publishedAt)}
    </time>
    {paper.data.venue && (
      <p style={{ marginTop: '0.6rem', color: 'var(--primary)', fontWeight: 600 }}>{paper.data.venue}</p>
    )}
    <Content />
    {paper.data.link && (
      <p style={{ marginTop: '1.6rem' }}>
        <a href={paper.data.link} target="_blank" rel="noreferrer">
          Read the publication â†—
        </a>
      </p>
    )}
  </article>
</BaseLayout>
